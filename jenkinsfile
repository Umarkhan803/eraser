pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Umarkhan803/eraser.git' 
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    script {
                        sh 'npm install'
                        sh 'npm run build' 
                    }
                }
            }
        }

        stage('Test Backend') {
            steps {
                dir('backend') {
                    script {
                        sh 'npm test'
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    script {
                        sh 'npm install'
                        sh 'npm run build'
                    }
                }
            }
        }

        stage('Test Frontend') {
            steps {
                dir('frontend') {
                    script {
                       
                        sh 'npm run lint' 
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the application...'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
